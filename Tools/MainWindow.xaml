<Window x:Class="Tools.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:Tools" WindowStyle="None" Title="MainWindow" 
        Background="#FF000000" WindowStartupLocation="CenterScreen" Height="900" Width="1800">
    <Window.Style>
        <Style TargetType="Window">
            
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="50" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.20*" />
            <RowDefinition Height="0.65*" />
            <RowDefinition Height="0.15*" />
        </Grid.RowDefinitions>
        <Panel.Background>
            <ImageBrush ImageSource="Resources/images/bg_3.png" Stretch="UniformToFill" />
        </Panel.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <TextBlock Grid.Column="0" Text="Administrator" FontSize="50" Foreground="#FFFFFFFF" VerticalAlignment="Center" Margin="100 0 0 0" />
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button Width="50" Height="50" VerticalAlignment="Center" BorderThickness="0" HorizontalAlignment="Right" Margin="0 0 20 0" Click="Window_Closing" >
            <materialDesign:PackIcon Kind="WindowClose" Foreground="#FFFFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20" />
        </Button>
        <Border Height="50" Width="50" Margin="0" HorizontalAlignment="Right" >
            <Grid>
                <materialDesign:PackIcon Kind="LetterNCircle" Foreground="#FFFFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Height="75" />
            </Grid>
        </Border>

        <ListBox Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <WrapPanel>
                    <Border Background="#FF1784db" Height="700" Width="1000" Margin="50 0 50 0" />
                    <Border Height="700" Margin="100 0 100 0" >
                        <StackPanel HorizontalAlignment="Left" Margin="0 0 0 0 ">
                            <ListView ItemsSource="{Binding LeftMenus}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Height="30">
                                            <materialDesign:PackIcon Kind="{Binding Path=Icon}" Foreground="#FFFFFFFF" Width="25" Height="25" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Path=Name}" Margin="20 0" Foreground="#FFFFFFFF" FontSize="20" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                    <ListBox VirtualizingPanel.VirtualizationMode="Recycling" ScrollViewer.CanContentScroll="False" ItemsSource="{Binding ListBoxItems}">
                        <Control.Template>
                            <ControlTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                                    <WrapPanel Orientation="Horizontal" IsItemsHost="True" ScrollViewer.CanContentScroll="True" />
                                </ScrollViewer>
                            </ControlTemplate>
                        </Control.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel Margin="50 0 50 0" Height="700" Width="665">
                                    <ListBox VirtualizingPanel.VirtualizationMode="Recycling" ScrollViewer.CanContentScroll="False" ItemsSource="{Binding MetorInfos}" >
                                        <Control.Template>
                                            <ControlTemplate>
                                                <WrapPanel Orientation="Horizontal" IsItemsHost="True" ScrollViewer.CanContentScroll="True" />
                                            </ControlTemplate>
                                        </Control.Template>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:TransitioningContent>
                                                    <materialDesign:TransitioningContentBase.OpeningEffects>
                                                        <materialDesign:TransitionEffect Kind="FadeIn" />
                                                    </materialDesign:TransitioningContentBase.OpeningEffects>
                                                    <WrapPanel>
                                                        <Border Height="{Binding Height}" Width="{Binding Width}" Margin="0" Background="{Binding Color}" MouseLeftButtonDown="Border_MouseLeftButtonDown" >
                                                            <Grid>
                                                                <materialDesign:PackIcon Kind="LetterNCircle" Foreground="#FFFFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Height="75" />
                                                                <TextBlock FontSize="20" Foreground="#FFFFFFFF" VerticalAlignment="Bottom" Margin="6" Text="{Binding Name}" />
                                                            </Grid>
                                                        </Border>
                                                    </WrapPanel>
                                                </materialDesign:TransitioningContent>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ListBox>
                                </WrapPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </ScrollViewer>
        </ListBox>
    </Grid>
</Window>